<%= link_to "Create new article ", new_article_path,class: "btn btn-lg btn-primary" %>
<h1 align = "center">
    Listing All Articles Created So Far 
</h1>
    <% @article.each do |article| %>
        <div class ="row">
            <div class ="col-xs-8">
               
                <div class= "well well-lg">
                    <div class= "article-title">
                        <%=link_to article.title,article_path(article) %>
                        </div>
                    <div class= "article-body">
                               
                           <%=truncate(article.description,length: 20)%> 
                    </div>
                    <div class="article-actions">
                
                <%= link_to "Edit this article ",edit_article_path(article), class: "btn btn-xs btn-success " %>
                <%= link_to "Delete this article", article_path(article), method: :delete,class: "btn btn-xs btn-danger" ,data: {confirm: "Are you sure " } %>  
        </div>
        </div>
        </div>
        

       
       
       
       
        <%end%>





